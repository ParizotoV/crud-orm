<%- include ('../partials/header') %>
  <h1>Pessoa</h1>
  <p><a href="/pessoas/create">Nova pessoa</a></p>

  <table class="table table-striped table-hover table-bordered">
    <tr>
      <th>Nome</th>
      <th>Cargo</th>
      <th>Ações</th>
      <% persons.map( person => { %>
        <tr>
          <td><%= person.name %></td>
          <td><%= person.office %></td>
          <td>
            <div class="btn-group" role="group">
              <a href="/pessoas/edit/<%= person.id %>" class="btn btn-default">Editar</a>
              <a href="/pessoas/delete/<%= person.id %>" class="btn btn-default">Excluir</a>
            </div>
          </td>
        </tr>
      <% }) %>
    </tr>
  </table>
<%- include ('../partials/footer') %>